<Project>
  <Target Name="_WriteBuildProperties" BeforeTargets="PreBuildEvent">
    <PropertyGroup>
      <_SDKOutputPath>$(MSBuildThisFileDirectory)\sdk\</_SDKOutputPath>
      <_SDKFixedContent>
      <![CDATA[
<!--
  This file is automatically generated by project build.
-->
<Project>
  <PropertyGroup>
    <_MonoWasmBuildPackageVersion>$(SDKPackageVersion)</_MonoWasmBuildPackageVersion>
    <_MonoWasmFrameworkPackageVersion>$(SDKPackageVersion)</_MonoWasmFrameworkPackageVersion>
    <_MonoWasmRuntimePackageVersion>$(SDKPackageVersion)</_MonoWasmRuntimePackageVersion>
    <_MonoWasmBindingsPackageVersion>$(SDKPackageVersion)</_MonoWasmBindingsPackageVersion>
    <_MonoWasmHttpHandlerPackageVersion>$(SDKPackageVersion)</_MonoWasmHttpHandlerPackageVersion>
    <_MonoWasmClientWebSocketPackageVersion>$(SDKPackageVersion)</_MonoWasmClientWebSocketPackageVersion>
  </PropertyGroup>
</Project>
      ]]>
      </_SDKFixedContent>      
    </PropertyGroup>

    <WriteLinesToFile File="$(_SDKOutputPath)\Versions.props" Overwrite="true" Lines="$(_SDKFixedContent)" />
  </Target>
</Project>
