<Project>
  <Target Name="_WriteBuildProperties" BeforeTargets="PreBuildEvent">
    <PropertyGroup>
      <_SDKOutputPath>$(MSBuildThisFileDirectory)\sdk\</_SDKOutputPath>
      <_SDKFixedContent>
      <![CDATA[
<!--
  This file is automatically generated by project build.
-->
<Project>
  <PropertyGroup>
      ]]>
      </_SDKFixedContent>      
      <_SDKFixedContentEnd>
      <![CDATA[
<!--
  End automatic generation.
-->
  </PropertyGroup>
</Project>  
      ]]>
      </_SDKFixedContentEnd>
    </PropertyGroup>

    <WriteLinesToFile File="$(_SDKOutputPath)\Versions.props" Overwrite="true" Lines="$(_SDKFixedContent)" Encoding="Unicode" />
    <WriteLinesToFile File="$(_SDKOutputPath)\Versions.props" Lines="&lt;_MonoWasmBuildPackageVersion&gt;$(SDKPackageVersion)&lt;/_MonoWasmBuildPackageVersion&gt;" Encoding="Unicode" />
    <WriteLinesToFile File="$(_SDKOutputPath)\Versions.props" Lines="&lt;_MonoWasmFrameworkPackageVersion&gt;$(SDKPackageVersion)&lt;/_MonoWasmFrameworkPackageVersion&gt;" Encoding="Unicode" />
    <WriteLinesToFile File="$(_SDKOutputPath)\Versions.props" Lines="&lt;_MonoWasmRuntimePackageVersion&gt;$(SDKPackageVersion)&lt;/_MonoWasmRuntimePackageVersion&gt;" Encoding="Unicode" />
    <WriteLinesToFile File="$(_SDKOutputPath)\Versions.props" Lines="&lt;_MonoWasmBindingsPackageVersion&gt;$(SDKPackageVersion)&lt;/_MonoWasmBindingsPackageVersion&gt;" Encoding="Unicode" />
    <WriteLinesToFile File="$(_SDKOutputPath)\Versions.props" Lines="&lt;_MonoWasmHttpHandlerPackageVersion&gt;$(SDKPackageVersion)&lt;/_MonoWasmHttpHandlerPackageVersion&gt;" Encoding="Unicode" />
    <WriteLinesToFile File="$(_SDKOutputPath)\Versions.props" Lines="&lt;_MonoWasmClientWebSocketPackageVersion&gt;$(SDKPackageVersion)&lt;/_MonoWasmClientWebSocketPackageVersion&gt;" Encoding="Unicode" />
    <WriteLinesToFile File="$(_SDKOutputPath)\Versions.props" Lines="$(_SDKFixedContentEnd)" Encoding="Unicode" />
  </Target>
</Project>
