<!-- Note: This is a dummy CSharp.targets file that tries to map Portable Library Project targets to something available in Mono on Mac -->

<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<TargetFrameworkIdentifier>.NETPortable</TargetFrameworkIdentifier>
		<AddAdditionalExplicitAssemblyReferences>false</AddAdditionalExplicitAssemblyReferences>
		<NoStdLib>true</NoStdLib>
	</PropertyGroup>
	
	<Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.Targets" />
	
	<PropertyGroup>
		<ResolveReferencesDependsOn>
			$(ResolveReferencesDependsOn);
			ResolvePortableReferences;
		</ResolveReferencesDependsOn>
	</PropertyGroup>
		
	<Target Name="ResolvePortableReferences">
		<CreateItem Include="@(ReferencePath); $(_TargetFrameworkDirectories)\*.dll">
			<Output TaskParameter="Include" ItemName="ReferencePath"/>
		</CreateItem>
	</Target>
	
</Project>
