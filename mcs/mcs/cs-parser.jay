	;

opt_lambda_parameter_list
	: /* empty */			{ $$ = Parameters.EmptyReadOnlyParameters; }
	| lambda_parameter_list		{ 
		ArrayList pars_list = (ArrayList) $1;
		$$ = new Parameters ((Parameter[])pars_list.ToArray (typeof (Parameter)));
