		$$ = let;
	}
	;

LetBody
	: LetSingleBody
	{
		LetClause lc = new LetClause ();
		lc.Add ((LetSingleBody) $1);
		$$ = lc;
	}
	| LetSingleBody COMMA LetBody
	{
		LetClause let = (LetClause) $3;
