		seq.Add ((ExprSingle) $1);
		$$ = seq;
	}
	| ExprSingle COMMA ExprSequence
	{
		ExprSequence seq = (ExprSequence) $3;
		seq.Insert (0, (ExprSingle) $1);
		$$ = seq;
	}
